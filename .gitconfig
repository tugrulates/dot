[user]
  email = me@tugrulates.com
  name = Tugrul Ates
[alias]
  lg = log --graph --oneline --all --decorate
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[core]
  autocrlf = input
  editor = code --wait
  # win: filemode = false
[init]
  defaultBranch = main
[gui]
  encoding = utf-8
